{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "none",
  "editor.renderFinalNewline": true,
  "editor.rulers": [
    120
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairsHorizontal": true,
  "errorLens.gutterIconsEnabled": true,
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.gutterIconSet": "defaultOutline",
  "errorLens.followCursor": "activeLine",
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.showLineCoverage": true,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "dart.renameFilesWithClasses": "prompt",
  "dart.flutterSdkPath": ".fvm/flutter_sdk",
  "dart.sdkPath": ".fvm/flutter_sdk/bin/cache/dart-sdk",
  "todo-tree.general.statusBar": "tags",
  "todo-tree.general.statusBarClickBehaviour": "reveal",
  "todo-tree.regex.enableMultiLine": true,
  "todo-tree.regex.regex": "//\\s($TAGS)[^\\n]*(\\n\\s*//[^\\n]*)*",
  "todo-tree.highlights.highlightDelay": 0,
  "todo-tree.general.tags": [
    "TODO",
    "ATTENTION"
  ],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "question",
      "foreground": "#000",
      "background": "#aa0",
      "iconColour": "#aa0",
      "gutterIcon": true,
      "type": "whole-line"
    },
    "ATTENTION": {
      "icon": "info",
      "foreground": "#fff",
      "background": "#a00",
      "iconColour": "#a00",
      "gutterIcon": true,
      "type": "whole-line"
    }
  },
  "cSpell.diagnosticLevel": "Warning",
  "cSpell.enableFiletypes": [
    "dart"
  ],
  "files.exclude": {
    ".git": true,
    ".reports/**": true,
    ".vscode/**": true,
    ".fvm/**": true,
    ".cspell.json": true,
    ".prettierrc": true,
    ".prettierignore": true,
    ".markdownlint.json": true,
    ".markdownlintignore": true,
    ".markdown-link-check.json": true,
    ".jscpd.json": true,
    "analysis_options.yaml": true,
    "packages/*/.dart_tool/**": true,
    "packages/*/build/**": true,
    "packages/*/coverage/**": true,
    "packages/*/android/**": true,
    "packages/*/web/**": true,
    "packages/*/windows/**": true,
    "packages/*/.packages": true,
    "packages/*/.flutter-plugins": true,
    "packages/*/.flutter-plugins-dependencies": true,
    "packages/*/lib/generated_plugin_registrant.dart": true,
    ".words": true,
    ".coverage": true,
    "**/*.lock": true,
    "**/*.freezed.dart": true,
    "**/*.g.dart": true
  },
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "yaml.schemas": {
    "C:\\Projects\\tlf\\packages\\tlf_configuration\\lib\\assets\\json_schema\\tlf.schema.json": "tlf.yaml"
  }
}
